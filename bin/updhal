#!/bin/sh
set -x
outdir=static
wget -O $outdir/hal.html "http://haltools.inrialpes.fr/Public/afficheRequetePubli.php?labos_exp=GDR MASCOT-NUM&CB_auteur=oui&CB_titre=oui&CB_article=oui&langue=Anglais&tri_exp=annee_publi&tri_exp3=date_publi&ordre_aff=TA&Fen=Aff&css=x" 
egrep -v "<!DOCTYPE|w3\.org\/TR\/xhtml1|VisuGen\.css|<link|<title|</head|<html|<meta|<body|<head|</body|</html" $outdir/hal.html > $outdir/hal.html.tmp
mv $outdir/hal.html.tmp $outdir/hal.html
while read l; do
	bin/filter.pl "$l" < $outdir/hal.html > $outdir/hal.html.tmp
	mv $outdir/hal.html.tmp $outdir/hal.html
done < data/Publis.Blacklist
rm ephemeral/cache/documents

